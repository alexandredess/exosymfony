{% extends 'baseadmin.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
<br>
<br>
<br>
<br>
    <row>
    <h1>Réservation</h1>
    </row>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Date</th>
                <th>Guest</th>
                <th>Time</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.Nom }}</td>
                <td>{{ booking.Mail }}</td>
                <td>{{ booking.Date ? booking.Date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking.Guest }}</td>
                <td>{{ booking.Time ? booking.Time|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('booking_show', {'id': booking.id}) }}">Voir</a>
                    <a href="{{ path('booking_edit', {'id': booking.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas de réservations</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('booking_new') }}">Créer une nouvelle Réservation</a>
{% endblock %}
